<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#89c7e9"
        android:gravity="center_vertical|top"
        android:orientation="vertical"
        android:paddingLeft="50dip"
        android:paddingRight="10dip" >
        
         <TextView
	        android:id="@+id/txt_weather_date"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
        <TextView
	        android:id="@+id/txt_weather_city"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_temp6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/txt_weather_detail6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	    
    </LinearLayout>
    

</LinearLayout>
